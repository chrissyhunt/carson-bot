<h1><%=@user.name%>'s Items by Category</h1>

<% @user_categories.each do |category| %>

<h3><a href="/categories/<%=category.id%>"><%=category.name%></a> (<a href="/categories/<%=category.id%>/edit">edit</a>)</h3>

  <ul>
    <% category.items.each do |item| %>
      <li><%=item.name if @user.items.include?(item)%></li>
    <% end %>
  </ul>

<% end %>
