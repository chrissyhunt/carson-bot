<div class="jumbotron">
  <div class="inside-header">
    <h1><%=@user.name%>'s Items by Location</h1>
  </div>

  <div class="inside-nav">
    <%= erb :nav %>
  </div>
</div>

<div class="container-fluid">
  <div class="row inside-content">
    <div class="col-sm-8 info-box">
      <h4>Inventory by Category</h4>
      <% @user_categories.each do |category| %>
      <p><a href="/categories/<%=category.id%>"><%=category.name%></a> (<a href="/categories/<%=category.id%>/edit">edit</a>)</p>
        <ul>
          <% category.items.each do |item| %>
            <li><%=item.name if @user.items.include?(item)%></li>
          <% end %>
        </ul>
      <% end %>
    </div>

    <div class="col-sm-4 info-box">
      <%= erb :sidenav %>
    </div>


  </div>

</div>
